# .htaccess Beispiel für Cloudron LAMP
# 
# Kopiere diese Datei zu .htaccess und füge deinen OpenRouter API-Key ein
# WICHTIG: .htaccess ist in .gitignore, damit der Key nicht ins Repo kommt!

# Fallback auf index.html für SPA-Routing
# WICHTIG: Statische Dateien (Bilder, CSS, JS) werden direkt serviert, nicht umgeleitet
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Erlaube direkten Zugriff auf statische Dateien (Bilder, CSS, JS, etc.)
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule . - [L]
  
  # Erlaube direkten Zugriff auf Verzeichnisse
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule . - [L]
  
  # Alle anderen Requests auf index.html umleiten (für SPA-Routing)
  RewriteRule ^index\.html$ - [L]
  RewriteRule . /index.html [L]
</IfModule>

# API-Key als Umgebungsvariable setzen (wird von api-proxy.php verwendet)
# Ersetze DEIN_API_KEY_HIER mit deinem echten OpenRouter API-Key
SetEnv OPENROUTER_API_KEY "DEIN_API_KEY_HIER"

# Caching für statische Assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/json "access plus 1 day"
</IfModule>

# Gzip-Kompression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Sicherheit: .htaccess selbst schützen
<Files ".htaccess">
  Order allow,deny
  Deny from all
</Files>
